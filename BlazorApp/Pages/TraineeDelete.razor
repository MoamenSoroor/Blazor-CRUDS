@page "/traineedelete/{TraineeId:int}"

@inject NavigationManager navigator

@if (Current != null)
{

    <h3 class="card-title">Are You Sure To Delete Trainee @Current.Name </h3>


    <div class="row">


        <div class="form-group row">
            <label class="col-form-label"> Trainee Id </label>
            <label class="form-control">@Current.ID</label>
        </div>

        <div class="form-group row">
            <label class="col-form-label"> Name </label>
            <label class="form-control">@Current.Name</label>
        </div>


        <div class="form-group row">
            <label class="col-form-label"> Birthdate </label>
            <label class="form-control"> @Current.Birthdate.ToShortDateString() </label>
        </div>

        <div class="form-group row">
            <label class="col-form-label"> Email </label>
            <label class="form-control"> @Current.email </label>
        </div>

        <div class="form-group row">
            <label class="col-form-label"> Phone Number </label>
            <label class="form-control"> @Current.MobileNo </label>
        </div>

        <div class="form-group row">
            <label class="col-form-label"> Gender </label>
            <label class="form-control"> @Current.Gender </label>
        </div>

        <div class="form-group row">
            <label class="col-form-label"> IsGraduated </label>
            <label class="form-control"> @Current.IsGraduated </label>
        </div>

        <button type="button" class="btn btn-primary" @onclick="DeleteTraineeClicked">Delete Trainee</button>
    </div>



}
else
            {
                <div>wait....</div>
            }
